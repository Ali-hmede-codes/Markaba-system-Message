{
  "name": "markaba-msgsystem",
  "version": "1.0.0",
  "description": "WhatsApp Web System for sending messages to groups",
  "main": "dist/backend/server.js",
  "scripts": {
    "start": "node dist/backend/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/backend/server.ts",
    "build": "tsc",
    "deploy": "npm run build && pm2 start ecosystem.config.js --env production",
    "deploy:dev": "pm2 start ecosystem.config.js --env development",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop whatsapp-message-system",
    "pm2:restart": "pm2 restart whatsapp-message-system",
    "pm2:reload": "pm2 reload whatsapp-message-system",
    "pm2:delete": "pm2 delete whatsapp-message-system",
    "pm2:logs": "pm2 logs whatsapp-message-system",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "setup": "npm install && npm run build && mkdir -p logs uploads",
    "clean": "rm -rf dist node_modules package-lock.json",
    "reinstall": "npm run clean && npm install",
    "health": "curl http://localhost:3000/api/health || echo 'Server not responding'",
    "backup": "tar -czf backup-$(date +%Y%m%d-%H%M%S).tar.gz .wwebjs_auth .wwebjs_cache .env",
    "update": "git pull && npm install && npm run build && npm run pm2:restart"
  },
  "keywords": [
    "whatsapp",
    "messaging",
    "groups"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/multer": "^2.0.0",
    "@types/uuid": "^10.0.0",
    "@whiskeysockets/baileys": "^6.7.8",
    "bcrypt": "^6.0.0",
    "connect-mysql-session": "^0.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "fs-extra": "^11.3.0",
    "libsodium-wrappers": "^0.7.15",
    "link-preview-js": "^3.1.0",
    "multer": "^2.0.2",
    "mysql2": "^3.14.3",
    "node-telegram-bot-api": "^0.66.0",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/node": "^22.7.4",
    "@types/node-telegram-bot-api": "^0.64.10",
    "@types/qrcode": "^1.5.5",
    "nodemon": "^2.0.22",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
